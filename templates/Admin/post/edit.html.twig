{% extends 'admin.html.twig' %}

{% block title %}
	Hello PostController!
{% endblock %}

{% block body %}

	<section class="w-full shadow bg-white border-gray-300 h-full rounded">
		<div class="flex flex-col h-full px-5 py-4">

			{{ form_start(form, {'attr': {'class': 'h-full'}}) }}

				<div class="flex flex-col justify-between h-full">
					<div class="space-y-12">
						<div class="border-b border-gray-900/10 pb-12">
							<h2 class="text-base font-semibold leading-7 text-gray-900">
								Post
							</h2>
							<p class="mt-1 text-sm leading-6 text-gray-600">
								just a short post
							</p>

							<div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">

								<div class="sm:col-span-6">

									{{ form_label(form.imageFile, null, {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}})  }}

									<div class="mt-2">
										{{ form_widget(form.imageFile, {'attr': {'class': 'block w-full rounded-md border-0 px-1 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}})  }}
									</div>
									{{ component('formError', { formError: form.imageFile.vars['errors']}) }}
								</div>

								<div class="sm:col-span-4">

									{{ form_label(form.title, null, {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}})  }}

									<div class="mt-2">
										{{ form_widget(form.title, {'attr': {'class': 'block w-full rounded-md border-0 px-1 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}})  }}
									</div>
									{{ component('formError', { formError: form.title.vars['errors']}) }}
								</div>


								<div class="sm:col-span-2">

									{{ form_label(form.status, null, {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}})  }}
									<div class="mt-2">

										<select name="{{ field_name(form.status) }}" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm:text-sm sm:leading-6l">
											{% for label, value in field_choices(form.status) %}
												<option value="{{ value }}">{{ label }}</option>
											{% endfor %}
										</select>
									</div>
									{{ component('formError', { formError: form.status.vars['errors']}) }}
								</div>

								<div class="sm:col-span-6">

									{{ form_label(form.text, null, {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}})  }}
									<div class="mt-2">
										{{ form_widget(form.text, {'attr': {'rows': 10, 'class': 'block w-full rounded-md border-0 px-2 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}})  }}
									</div>
									{{ component('formError', { formError: form.text.vars['errors']}) }}
								</div>

							</div>
						</div>

					</div>

					<div class="mt-6 flex items-center justify-end gap-x-6">
						<a href="{{ path('admin_post_index') }}" class="text-sm font-semibold leading-6 text-gray-900">
							Cancel
						</a>
						{{ form_row(form.add, {'attr': {'class': 'rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600'}}) }}
					</div>
				</div>

			{{ form_end(form) }}


		</div>
	</section>

{% endblock %}