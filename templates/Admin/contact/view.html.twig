<turbo-frame id="modal">
    <div class="modal" data-controller="modal" data-action="keyup@document->modal#escClose">
        <button type="button" class="modal-backdrop" tabindex="-1" data-action="modal#close"></button>

        <div class="modal-window">
            <div class="px-4 py-5">
                <div class="px-0">
                    <h3 class="text-base font-semibold leading-7 text-gray-900">Contact Information</h3>
                </div>
                <div class="mt-4 border-t border-gray-100">
                    <dl class="divide-y divide-gray-100">
                        <div class="px-0 py-2 sm:grid sm:grid-cols-3 sm:gap-4">
                            <dt class="text-sm font-medium leading-6 text-gray-900">Name</dt>
                            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">{{ contact.name }}</dd>
                        </div>

                        <div class="px-0 py-2 sm:grid sm:grid-cols-3 sm:gap-4">
                            <dt class="text-sm font-medium leading-6 text-gray-900">Email address</dt>
                            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">{{ contact.email }}</dd>
                        </div>

                        <div class="px-0 py-2 sm:grid sm:grid-cols-3 sm:gap-4">
                            <dt class="text-sm font-medium leading-6 text-gray-900">Message</dt>
                            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">{{ contact.message }}</dd>
                        </div>

                    </dl>
                </div>
            </div>
        </div>
    </div>
</turbo-frame>