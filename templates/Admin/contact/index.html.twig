    <style>

        .pill-tab {
            color: rgb(107 114 128 / 1);
        }

        .pill-tab:hover {
            background-color: rgb(199 210 254 / 1);
            border-inline-start-color: rgb(165 180 252 / 1);
            border-inline-start-width: 4px;
        }

        .pill-tab-active {
            color: rgb(79 70 229 / 1);
            background-color: rgb(238 242 255 / 1);
                border-inline-start-color: rgb(79 70 229 / 1);
            border-inline-start-width: 4px;
        }

    </style>

{% endblock %}

{% block javascripts %}
   {{ parent() }}

    <script>

        function changeTab(element, pillIndex) {

            var pills = document.getElementsByClassName('pills');
            for (var i = 0; i < pills.length; i++) {
                pills[i].style.display = 'none';
            }

            document.getElementById(`pills-${pillIndex}`).style.display = 'block';

            var tabs = document.getElementsByClassName('tab');
            for (var i = 0; i < tabs.length; i++) {

                tabs[i].classList.remove('pill-tab-active');
                tabs[i].classList.add('pill-tab');
            }
            element.classList.toggle('pill-tab-active');
        }

    </script>

{% endblock %}