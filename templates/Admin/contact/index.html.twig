                    {{ component('ContactImbox') }}
                </div>
                <div id="pills-starred" class="pills h-full" style="display: none;">
                    {{ component('ContactImboxStarred') }}
                </div>
                <div id="pills-trash" class="pills h-full" style="display: none;">
                    {{ component('ContactImboxTrash') }}
                </div>
                <div id="pills-archived" class="pills h-full" style="display: none;">
                    {{ component('ContactImboxArchived') }}
                </div>

            </div>
